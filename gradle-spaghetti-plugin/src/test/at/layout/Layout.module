/**
 * Layout module.
 */
module prezi.graphics.text.Layout {

    interface CharacterStyle {
        String getType()
        any getValue()
    }

    interface AbstractText {
        void insert(int offset, String text, CharacterStyle[] withStyles)
        void delete(int offset, int end)
    }

    /**
     * Describes a block of text.
     */
    interface Text extends AbstractText {
        /**
         * Inserts the given String at <code>offset</code>.
         */
        String getRawText()
        any getInternals()
    }

    Text createText()
    CharacterStyle createCharacterStyle(String type, any value)
}
